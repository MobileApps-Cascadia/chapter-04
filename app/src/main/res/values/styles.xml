<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="android:buttonStyle"></item>
    </style>

    <style name="NavBar" parent="AppTheme">
        <item name="android:navigationBarColor">@color/colorPrimaryLight</item>
        <item name="android:actionBarItemBackground">@color/colorPrimaryLight</item>
        <item name="android:background">@color/navbar_background</item>
        <item name="android:backgroundTint">@color/navbar_background</item>
    </style>

    <style name="ContactEditor" parent="AppTheme">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="ButtonsStyle" parent="AppTheme">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>
</resources>